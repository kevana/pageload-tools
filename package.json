{
  "name": "pageload-tools",
  "version": "0.0.2",
  "description": "Tools to help you do things based on how pageload went for the user",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib",
    "lint": "eslint src test",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register --recursive",
    "test:watch": "NODE_ENV=test mocha --compilers js:babel-core/register --recursive --watch",
    "test:cov": "babel-node ./node_modules/.bin/isparta cover ./node_modules/.bin/_mocha -- --recursive",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run build",
    "copyExamples": "npm run build && cp lib/index.js examples/"
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "performance",
    "navigation",
    "timing",
    "pageload"
  ],
  "author": "Kevan Ahlquist <kevan@kevanahlquist.com> (https://kevanahlquist.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevana/pageload-tools.git"
  },
  "bugs": {
    "url": "https://github.com/kevana/pageload-tools/issues"
  },
  "homepage": "https://github.com/kevana/pageload-tools/issues",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.15.2",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2"
  }
}
